{
	"name": "@zhangxg/nk",
	"version": "1.0.1",
	"description": "node serve",
	"author": "zxg",
	"main": "index.js",
	"scripts": {
		"dev": "npx nodemon --exec node ./scripts/start.js",
		"serve": "node ./scripts/start.js",
		"prettier": "prettier --write ."
	},
	"keywords": [
		"node",
