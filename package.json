    "koa": "^2.13.0",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa-connect": "^2.1.0",
    "koa-favicon": "^2.1.0",
    "koa-helmet": "^4.0.0",
    "koa-router": "^7.4.0",
    "koa-send": "^5.0.1",
    "koa2-cors": "^2.0.6",
    "lodash": "^4.17.21",
    "log4js": "^6.3.0",
    "merge": "^1.2.1",
    "mysql": "^2.18.1",
    "typeorm": "^0.2.28",
    "upath": "^2.0.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.6"
  }
